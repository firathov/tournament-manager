{% extends 'base.html.twig' %}
{% block title %}Football Manager{% endblock %}

{% block body %}
    <div class="card mt-4">
        <div class="card-body">
            <div class="btn-group mb-2" role="group">
                <a href="{{ path('team_index') }}">
                    <button type="button" class="btn btn-success">Team Section</button>
                </a>
            </div>
            <div class="btn-group mb-2" role="group">
                <a href="{{ path('tournament_index') }}">
                    <button type="button" class="btn btn-primary">Tournament Section</button>
                </a>
            </div>
            <table class='table mt-8 table-striped'>
                <thead>
                <tr>
                    <th scope='col'>List of the Tournaments</th>
                    <th scope='col'>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for tournament in tournaments %}
                    <tr>
                        <td>{{ tournament.name }}</td>
                        <td>
                            <a class='btn btn-info' style="margin-left: 5px" href='{{ path('tournament_show', {'slug': tournament.id}) }}'>Details</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
