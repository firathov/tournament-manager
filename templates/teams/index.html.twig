{% extends 'base.html.twig' %}

{% block title %}Teams{% endblock %}

{% block body %}
    <div class="card mt-4">
        <div class="card-body">
            <div class="d-flex align-items-center">
                <h1>Teams List</h1>
                <div>
                    <a class='btn btn-success' style="margin: 0 10px 0 10px;" href='{{ path('team_new') }}'>Добавить</a>
                </div>
                <div class="btn-group" role="group">
                    <a href="{{ path('main_index') }}">
                        <button type="button" class="btn btn-secondary">Main page</button>
                    </a>
                </div>
            </div>
            <table class='table mt-8 table-striped'>
                <thead>
                <tr>
                    <th scope='col'>Name of the Teams</th>
                    <th scope='col'>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for team in teams %}
                    <tr>
                        <td>{{ team.name }}</td>
                        <td>
                            <div class="row">
                                <div class="col">
                                    {{ include('/teams/_delete_form.html.twig') }}
                                </div>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
